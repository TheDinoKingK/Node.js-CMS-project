<div class="row">
    <div class="col-sm-4">
        <h1>Edit Category</h1>
        <form action="/admin/categories/edit/{{category._id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input value="{{category.name}}" type="text" name="name" placeholder="Enter title" class="form-control">
            </div>

            <button type="submit" class="btn btn-dark">Update Category</button>
        </form>
    </div>
</div>