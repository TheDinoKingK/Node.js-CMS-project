<h1>Comments</h1>

<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">author</th>
        <th scope="col">date</th>
        <th scope="col">body</th>
    </tr>
    </thead>
    <tbody>
    {{#each comments}}
        <tr>
            <th>{{_id}}</th>
            <td>{{user.firstName}} {{user.lastName}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td>{{body}}</td>
            <td>
                <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>